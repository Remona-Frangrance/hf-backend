{
    "compilerOptions": {

      "outDir": "./dist",
      "rootDir": "./src",
     
      "noImplicitAny": true,
   
    "skipLibCheck": true,
      "resolveJsonModule": true,
       "types": ["node", "express", "bcryptjs", "jsonwebtoken"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2017",
    "strict": true
    },
    "include": ["src", "server.ts"],
    "scripts": {
  "start": "tsc && node dist/index.js",
  "dev": "ts-node-dev --respawn src/index.ts"
}

  }
  